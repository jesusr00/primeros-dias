<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="#42a5f5"
    android:id="@+id/guide_teachers_card"
    android:padding="4dp">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <ImageView
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:id="@+id/guide_teachers_card_image"
          android:layout_alignParentStart="true"
          android:layout_margin="16dp"
          />


      <TextView
          android:text="Name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/guide_teachers_card_name"
          android:layout_toEndOf="@+id/guide_teachers_card_image"
          android:layout_margin="4dp"
          />
      <TextView
          android:text="Group"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/guide_teachers_card_group"
          android:layout_toEndOf="@+id/guide_teachers_card_image"
          android:layout_below="@+id/guide_teachers_card_name"
          android:layout_margin="4dp"
          />
  </RelativeLayout>


</androidx.cardview.widget.CardView>