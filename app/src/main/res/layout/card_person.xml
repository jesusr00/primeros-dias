<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layout_margin="5dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cardPersonPhotoCard"
        android:layout_centerHorizontal="true"
        app:cardElevation="6dp"
        app:strokeWidth="0dp"
        android:shape="ring"
        app:cardCornerRadius="40dp">

        <ImageView
            android:id="@+id/cardPersonPhoto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_fte_black_logo"
            />
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardFeu"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="-45dp"
        android:layout_marginBottom="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardPersonPhotoCard"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:strokeWidth="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/cardPersonName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:text="@string/person_name" />

            <TextView
                android:id="@+id/cardPersonPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardPersonName"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/cardPersonPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardPersonPosition"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>