<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layout_margin="5dp">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cardPersonPhotoCard"
        android:layout_centerHorizontal="true"
        android:translationZ="2dp"
        app:cardCornerRadius="500dp">

        <ImageView
            android:id="@+id/cardPersonPhoto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_fte_black_logo"
            />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardFeu"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="-30dp"
        android:layout_marginBottom="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardPersonPhotoCard"
        app:cardCornerRadius="5dp"
        android:elevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/cardPersonName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:text="Nombre" />

            <TextView
                android:id="@+id/cardPersonPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardPersonName"
                android:layout_centerHorizontal="true"
                android:text="Cargo" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>